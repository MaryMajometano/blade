{
    "name": "flattens/blade",
    "description": "A framework for laravel and statamic",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Thaden",
            "email": "hello@tobiasthaden.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "statamic/cms": "3.2.*",
        "facade/ignition-contracts": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.18",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Flattens\\Blade\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flattens\\Blade\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Flattens\\Blade\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
